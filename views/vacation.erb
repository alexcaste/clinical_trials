<div class="container">

  <h1><%= @specialist.name %> Days Unavailable</h1>
  <p class="lead"> Current Unavailble Date(s)</p>
    <table class="table table-hover table-responsive table-condensed">
      <thead>
        <tr>
          <th class="col-md-3 ">Start</th>
          <th class="col-md-3 ">End</th>
          <th class="col-md-1 text-center">Delete</th>
        </tr>
      </thead>
    <% if @vacations.any? %>
    <% @vacations.each do |vacay| %>
        <tbody>
          <tr>
            <td>
              <form action="/vacation/<%= vacay.id %>" method="post">
                <input type="hidden" name="_method" value="patch">
                <input type="hidden" name="specialist_id" value="<%= @specialist.id %>">
                  <button name="submit" type="submit" class="btn btn-warning">Update</button>
                </form>
            </td>
              <td>
                <input class="form-control" type="date" name="start_date" id="start_date" value="<%= vacay.start_date %>">
              </td>
              <td>
                <input class="form-control" type="date" name="end_date" id="end_date" value="<%= vacay.end_date %>">
              </td>
              <td class="text-center">
                <form action="/vacation/<%= vacay.id %>" method="post">
                  <%= erb :sm_del_partial %>
                </form>
              </td>
          </tr>
        </tbody>
    </table>
    <% end %>
    <% end %>
  <br>
  <p class="lead"> Add Unavailable Date(s)</p>
  <form>
  <form class="form-inline">
    <form action="/vacation/add/<%= @specialist.id %>" method="post">
        <div class="form-group">
          <label for="start_date">Start Date</label>
          <input class="form-control" type="date" name="start_date" id="start_date">
        </div>
        <div class="form-group">
          <label for="end_date">End Date</label>
          <input class="form-control" type="date" name="end_date" id="end_date">
        </div>
          <button name="submit" type="submit" class="btn btn-success glyphicon glyphicon-plus"></button>
    </form>
  </form>

</form>

  <br>
</div>
