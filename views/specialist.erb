<h1><%= @specialist.first_name%> <%= @specialist.last_name%>'s information</h1>
<div class="container">
  <div class="row">
    <div style = "border-right: 1px solid #ccc" class="col-md-8">
      <p class="lead">Name: <%= @specialist.name %></p>
      <p class="lead">Phone: <%= @specialist.phone %></p>
      <p class="lead">e-mail: <%= @specialist.email %></p>
    </div>
    <div class="col-md-4">
      <p class = "lead">Days Unavailable</p>
        <% if @vacations.any?%>
        

        <% end %>
      <form id="form_id" action="/vacation/add/<%= @specialist.id %>" method="post">
        <button name="submit" type="submit" class="btn btn-sm btn-info">Edit Availability</button>
      </form>
    </div>
  </div>




<br>
<p class="lead">Add </p>
<form id="form_id" action="/specialist/<%= @specialist.id %>" method="post">
  <%= erb :specialist_partial %>
  <button name="submit" type="submit" class="btn btn-warning">Update</button>
</form>
<br>

<% if @specialist.visits.any? %>
  <ul>
    <% @specialist.visit do |visit| %>
    <li><a href="/visits/<%= visit.id %>"> <%= visits.name %> </a></li>
    <% end %>
  </ul>

<% else %>


<p class="lead"> <%= @specialist.first_name%> <%= @specialist.last_name%> currently has no visits please see the <a href="/trials">trials</a> page to assign them to a trial.

</p>

<% end %>
</div>
